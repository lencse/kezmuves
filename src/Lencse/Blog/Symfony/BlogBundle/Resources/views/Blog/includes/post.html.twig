<div class="boxed  push-down-45">
    <div class="meta">
        {% if not post.featuredImage %}
            <div class="row">
                <div class="col-xs-12  col-sm-10  col-sm-offset-1">
                    <div class="meta__container--without-image">
                        <div class="row">
                            {% include 'BlogBundle:Blog/includes:postMetaLeft.html.twig' %}
                            {% include 'BlogBundle:Blog/includes:postMetaRight.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <a href="{{ postRoute(post) }}"><img class="wp-post-image" src="{{ post.featuredImage }}" alt=""></a>
            <div class="meta__container">
                <div class="row">
                    {% include 'BlogBundle:Blog/includes:postMetaLeft.html.twig' %}
                    {% include 'BlogBundle:Blog/includes:postMetaRight.html.twig' %}
                </div>
            </div>
        {% endif %}
    </div>
    {% include 'BlogBundle:Blog/includes:postBody.html.twig' %}
</div>

