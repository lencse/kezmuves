    <meta property="og:site_name" content="Kézműves Programozó"/>
    <meta property="og:description" content="{{ data.meta.description }}"/>
    {% if data.meta.image %}
        <meta property="og:image" content="{{ app.request.schemeAndHttpHost }}/{{ data.meta.image }}"/>
    {% endif %}

